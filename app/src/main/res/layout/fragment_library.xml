<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?attr/colorSecondaryVariant"
    android:orientation="vertical"
    tools:context=".library.ui.LibraryFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_start_for_page_title"
        android:layout_marginTop="@dimen/margin_top_for_page_title"
        android:fontFamily="@font/ys_display_medium"
        android:text="@string/library_name"
        android:textColor="?attr/colorSecondary"
        android:textFontWeight="500"
        android:textSize="@dimen/text_normal" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_large"
        android:background="?attr/colorSecondaryVariant"
        app:tabIndicatorColor="?attr/colorSecondary"
        app:tabIndicatorFullWidth="true"
        app:tabMode="fixed"
        app:tabTextAppearance="@style/TextForLibraryTab"
        app:tabTextColor="?attr/colorSecondary" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>