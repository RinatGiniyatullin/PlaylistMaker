<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSecondaryVariant"
    android:orientation="vertical">

    <TextView
        android:id="@+id/button_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:drawablePadding="28dp"
        android:drawableTint="?attr/colorSecondary"
        android:fontFamily="@font/ys_display_medium"
        android:text="@string/settings"
        android:textColor="?attr/colorSecondary"
        android:textFontWeight="500"
        android:textSize="@dimen/text_normal"
        app:drawableStartCompat="@drawable/arrow_back" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/theme_switcher"
        style="@style/TextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginHorizontal="@dimen/padding_large"
        android:layout_marginTop="40dp"
        android:height="@dimen/height_for_settings"
        android:text="@string/dark_theme" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_for_settings"
        android:paddingStart="@dimen/padding_large"
        android:paddingEnd="@dimen/padding_large">

        <TextView
            android:id="@+id/share_app"
            style="@style/TextStyle"
            android:text="@string/share_app" />

        <ImageView
            style="@style/ImageStyle"
            android:src="@drawable/share" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_for_settings"
        android:paddingStart="@dimen/padding_large"
        android:paddingEnd="@dimen/padding_large">

        <TextView
            android:id="@+id/write_in_support"
            style="@style/TextStyle"
            android:text="@string/write_in_support" />

        <ImageView
            style="@style/ImageStyle"
            android:src="@drawable/support" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_for_settings"
        android:paddingStart="@dimen/padding_large"
        android:paddingEnd="@dimen/padding_large">

        <TextView
            android:id="@+id/user_agreement"
            style="@style/TextStyle"
            android:text="@string/user_agreement" />

        <ImageView
            style="@style/ImageStyle"
            android:src="@drawable/arrow_forward" />

    </FrameLayout>

</LinearLayout>