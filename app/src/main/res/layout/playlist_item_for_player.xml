<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/playlistCover"
        android:layout_width="@dimen/margin_45"
        android:layout_height="@dimen/margin_45"
        android:layout_gravity="center_vertical"
        android:layout_marginVertical="@dimen/margin_8"
        android:layout_marginStart="@dimen/margin_13"
        tools:src="@tools:sample/backgrounds/scenic" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/margin_14"
        android:layout_marginStart="@dimen/margin_8"
        android:layout_marginEnd="@dimen/margin_13"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/playlistName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ys_display_regular"
            android:textColor="?attr/black_to_white_color"
            android:textFontWeight="400"
            android:textSize="@dimen/text_16"
            tools:text="@tools:sample/cities" />

        <TextView
            android:id="@+id/playlistNumbers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_1"
            android:fontFamily="@font/ys_display_regular"
            android:textColor="?attr/gray_to_white_color"
            android:textFontWeight="400"
            android:textSize="@dimen/text_11"
            tools:text="@tools:sample/cities" />

    </LinearLayout>

</LinearLayout>