<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/search_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_s_normal"
        android:layout_marginTop="@dimen/margin_s_normal"
        android:drawablePadding="28dp"
        android:drawableTint="?attr/colorSecondary"
        android:fontFamily="@font/ys_display_medium"
        android:text="@string/search"
        android:textColor="?attr/colorSecondary"
        android:textFontWeight="500"
        android:textSize="@dimen/text_normal"
        app:drawableStartCompat="@drawable/arrow_back" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginStart="@dimen/padding_large"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="@dimen/padding_large"
        android:background="@drawable/shape"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="13dp"
            android:src="@drawable/search"
            app:iconPadding="10dp"
            app:tint="?attr/colorContainer" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="@dimen/zero_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="9dp"
            android:layout_marginEnd="9dp"
            android:layout_weight="1"
            android:background="@null"
            android:color="?attr/colorOnPrimary"
            android:gravity="center_vertical"
            android:hint="@string/search"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="?attr/colorOnPrimary"
            android:textColorHint="?attr/colorContainer"
            android:textCursorDrawable="@drawable/cursor"
            android:textFontWeight="400"
            android:textSize="@dimen/text_small"
            app:fontFamily="@font/ys_display_regular" />

        <ImageView
            android:id="@+id/clearIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/margin_large"
            android:src="@drawable/close"
            android:visibility="gone"
            app:tint="?attr/colorContainer" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="24dp"/>

</LinearLayout>

