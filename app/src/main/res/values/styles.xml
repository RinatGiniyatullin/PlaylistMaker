<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginStart">@dimen/margin_16</item>
        <item name="android:layout_marginEnd">@dimen/margin_16</item>
        <item name="android:backgroundTint">?attr/white_to_white_color</item>
        <item name="android:textColor">?attr/black_to_black_color</item>
        <item name="android:textSize">@dimen/text_22</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="textAllCaps">false</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">10dp</item>
        <item name="iconTint">?attr/black_to_black_color</item>
        <item name="cornerRadius">@dimen/margin_16</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_24</item>
        <item name="android:backgroundTint">?attr/black_to_white_color</item>
        <item name="android:textColor">?attr/white_to_black_color</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="textAllCaps">false</item>
        <item name="cornerRadius">@dimen/margin_54</item>
    </style>

    <style name="TextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">?attr/black_to_white_color</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="TextForLibraryTab">
        <item name="android:textColor">?attr/black_to_white_color</item>
        <item name="android:textSize">@dimen/text_14</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="ImageStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical|end</item>
        <item name="android:tint">?attr/gray_to_white_color</item>
    </style>

    <style name="TextForFragmentStyle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">?attr/black_to_white_color</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/text_19</item>
    </style>

    <style name="TextForPlayerDescription">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">?attr/black_to_white_color</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/text_13</item>
    </style>

    <style name="TextForPlayerDescriptionValue">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/text_13</item>
    </style>

    <style name="BNVText" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="SwitchTheme">
        <item name="thumbTint">@color/text_gray</item>
        <item name="trackTint">@color/light_gray</item>
    </style>

    <style name="InputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/empty_stroke_color</item>
        <item name="hintTextColor">@color/empty_stroke_color</item>

    </style>


</resources>